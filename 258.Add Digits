class Solution(object):
    def addDigits(self, num):
        """
        :type num: int
        :rtype: int
        
        while(num >= 10):
            temp,val = num,0
            while(temp > 0):
                val += temp % 10
                temp = temp / 10
            num = val
        return num
        """
        k = int(abs(num-1)/9)
        return num - 9 * k
  """
  Math
  """
